@prefix rr: <http://www.w3.org/ns/r2rml#>.
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix crml: <http://semweb.mmlab.be/ns/crml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix ex: <http://www.example.com/> .
@prefix prov: <http://www.w3.org/ns/prov#>.
@prefix prov-said: <http://semweb.datasciencelab.be/ns/prov-said/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix fnml: <http://semweb.mmlab.be/ns/fnml#> .
@prefix fno: <http://w3id.org/function/ontology#> .
@prefix grel: <http://users.ugent.be/~bjdmeest/function/grel.ttl#> .
@prefix ov: <http://open.vocab.org/terms/>.
@prefix schema: <http://schema.org/> .
@prefix tsioc: <http://rdfs.org/sioc/types#>.
@prefix fabio: <http://purl.org/spar/fabio/>.
@prefix twitterFN: <http://users.ugent.be/~bjdmeest/function/twitter.ttl#>.

@base <http://example.com/base> .

<#Tweet>
    rml:logicalSource [
      rml:source "tweets.json";
      rml:referenceFormulation ql:JSONPath;
      rml:iterator "$.[*]"
    ];

    rr:subjectMap [
        rr:template "https://www.example.com/tweet/{id}";
	    rr:class prov:Entity, ov:MicroblogPost, schema:SocialMediaPosting, tsioc:MicroblogPost, fabio:Tweet
    ];

    rr:predicateObjectMap [
        rr:predicate prov:label, schema:articleBody;
        rr:objectMap [ rml:reference "text" ];
    ];

    rr:predicateObjectMap [
        rr:predicate schema:mainEntityOfPage;
        rr:objectMap [ 
	        rr:template "https://twitter.com/my_user/status/{id}";
	        rr:termType rr:Literal;
            	rr:datatype schema:URL
        ];
    ];

    rr:predicateObjectMap [
        rr:predicate prov:wasAttributedTo;
        rr:objectMap [ 
	    rr:constant <https://www.example.com/#me>;
            rr:termType rr:IRI 
        ];
    ];

    rr:predicateObjectMap [
        rr:predicate prov:wasGeneratedBy;
        rr:objectMap [ 
	    rr:parentTriplesMap <#Emit>;
            rr:joinCondition [
              rr:parent "id";
              rr:child "id"
            ]
        ];
    ].

############
### EMIT ###
############

<#Emit>
    rml:logicalSource [
      rml:source "emits.json";
      rml:referenceFormulation ql:JSONPath;
      rml:iterator "$.[*]"
    ];

    rr:subjectMap [
        rr:template "https://www.example.com/emit/{id}";
	rr:class prov:Activity
    ];

    rr:predicateObjectMap [
        rr:predicate prov:type;
        rr:objectMap [ 
	    rr:constant prov-said:EmitMessage;
            rr:termType rr:IRI 
        ];
    ];

    rr:predicateObjectMap [
        rr:predicate prov:startedAtTime, prov:endedAtTime;
        rr:objectMap [
          rml:reference "created_at"
        ];
    ];

    rr:predicateObjectMap [
        rr:predicate prov:wasStartedBy;
        rr:objectMap [ 
	    rr:constant <https://www.example.com/#me>;
            rr:termType rr:IRI 
        ];
    ].
