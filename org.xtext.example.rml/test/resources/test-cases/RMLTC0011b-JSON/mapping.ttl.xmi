<?xml version="1.0" encoding="ASCII"?>
<rml:Mapping xmi:version="2.0" 
	xmlns:xmi="http://www.omg.org/XMI" 
	xmlns:rml="http://www.xtext.org/example/rml/RML">
	<directives prefix="rr:" iri="http://www.w3.org/ns/r2rml#"/>
	<directives prefix="foaf:" iri="http://xmlns.com/foaf/0.1/"/>
	<directives prefix="ex:" iri="http://example.com/"/>
	<directives prefix="xsd:" iri="http://www.w3.org/2001/XMLSchema#"/>
	<directives prefix="rml:" iri="http://semweb.mmlab.be/ns/rml#"/>
	<directives prefix="ql:" iri="http://semweb.mmlab.be/ns/ql#"/>
	<directives base="http://example.com/base/"/>
	<triplesMaps name="TriplesMap1">
		<logicalSource  iterator="$.students[*]" referenceFormulation="ql:JSONPath">
			<source path="student.json"/>
		</logicalSource>
		<subjectMap>
			<template value="http://example.com/student/{ID}"/>
		</subjectMap>
		<predicateObjectMaps ownTriplesMap="TriplesMap1">
			<predicateMaps>
				<constant value="ex:firstName"/>
			</predicateMaps>
			<objectMaps ownTriplesMap="TriplesMap1">
				<reference value="FirstName"/>
			</objectMaps>
		</predicateObjectMaps>
		<predicateObjectMaps ownTriplesMap="TriplesMap1">
			<predicateMaps>
				<constant value="ex:lastName"/>
			</predicateMaps>
			<objectMaps ownTriplesMap="TriplesMap1">
				<reference value="LastName"/>
			</objectMaps>
		</predicateObjectMaps>
	</triplesMaps>
	<triplesMaps name="TriplesMap2">
		<logicalSource  iterator="$.sports[*]" referenceFormulation="ql:JSONPath">
			<source path="sport.json"/>
		</logicalSource>
		<subjectMap>
			<template value="http://example.com/sport/{ID}"/>
		</subjectMap>
		<predicateObjectMaps ownTriplesMap="TriplesMap2">
			<predicateMaps>
				<constant value="ex:id"/>
			</predicateMaps>
			<objectMaps ownTriplesMap="TriplesMap2">
				<reference value="ID"/>
			</objectMaps>
		</predicateObjectMaps>
		<predicateObjectMaps ownTriplesMap="TriplesMap2">
			<predicateMaps>
				<constant value="ex:description"/>
			</predicateMaps>
			<objectMaps ownTriplesMap="TriplesMap2">
				<reference value="Description"/>
			</objectMaps>
		</predicateObjectMaps>
	</triplesMaps>
	<triplesMaps name="LinkMap_1_2">
		<logicalSource  iterator="$.links[*]" referenceFormulation="ql:JSONPath">
			<source path="student_sport.json"/>
		</logicalSource>
		<subjectMap>
			<template value="http://example.com/student/{ID_Student}"/>
		</subjectMap>
		<predicateObjectMaps ownTriplesMap="LinkMap_1_2">
			<predicateMaps>
				<constant value="ex:plays"/>
			</predicateMaps>
			<objectMaps ownTriplesMap="LinkMap_1_2">
				<template value="http://example.com/sport/{ID_Sport}"/>
			</objectMaps>
		</predicateObjectMaps>
	</triplesMaps>
</rml:Mapping>
